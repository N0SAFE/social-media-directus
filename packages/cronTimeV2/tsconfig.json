{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
          "@/*": ["src/*"],
      },"rootDir": "src",
      "outDir": "dist",
      "noEmit": false,
      "declaration": true,
      "declarationDir": "./dist",
      "emitDeclarationOnly": true,
      "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tsup.config.ts"]
}

