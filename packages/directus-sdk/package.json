{
    "name": "@repo/directus-sdk",
    "version": "1.0.0",
    "main": "index.js",
    "exports": {
        "./schema": "./src/cache/schema.json",
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./utils": {
            "import": {
                "types": "./dist/utils.d.ts",
                "default": "./dist/utils.mjs"
            },
            "require": {
                "types": "./dist/utils.d.ts",
                "default": "./dist/utils.js"
            }
        },
        "./client": {
            "import": {
                "types": "./dist/client.d.ts",
                "default": "./dist/client.mjs"
            },
            "require": {
                "types": "./dist/client.d.ts",
                "default": "./dist/client.js"
            }
        }
    },
    "scripts": {
        "clean": "rimraf dist",
        "pretify": "npx prettier ./src/**/*.{ts,tsx,js,jsx,css} --write",
        "init": "npm run build",
        "dev": "concurrently -c \"blue,green\" -n \"files,types\" \"tsup --watch\" \"tsc --build --force --pretty --preserveWatchOutput --verbose --diagnostics --watch\"",
        "build": "npm run generate:directus:types && concurrently -c \"blue,green\" -n \"files,types\" \"tsup\" \"tsc --build --force --pretty --preserveWatchOutput --verbose --diagnostics --force\"",
        "lint": "eslint \"**/*.ts*\"",
        "test": "echo 'all packages:ui tests passed!'",
        "generate:directus:types": "envCli \"wait-port ${NEXT_PUBLIC_API_URL}${API_PING_PATH} && indirectus sdk generate --url ${NEXT_PUBLIC_API_URL} --token ${API_ADMIN_TOKEN} --dir ./src --outputDir ./src\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.8.0",
        "@n0safe/indirectus": "^1.0.6",
        "@repo/eslint-config": "*",
        "@repo/prettier-config": "*",
        "@repo/tsconfig": "*",
        "typescript": "^5.5.3"
    },
    "dependencies": {
        "@directus/sdk": "^17.0.0",
        "@repo/bin": "*",
        "@repo/tsup-config": "*",
        "wait-port": "^1.1.0"
    }
}
